.user .user-header-image {
  width: 100%;
}
.user .user-info-box {
  background: #ffffff;
  padding: 30rpx;
  margin: -80rpx 20rpx 20rpx 20rpx;
  position: relative;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
}
.user .user-info-box .user-avg {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.user .user-info-box .user-nickname {
  margin-left: 20rpx;
}
.user .user-info-box .user-phone {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #666666;
}
.user .user-recharge-wrapper {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx;
}
.user .user-recharge-wrapper .user-recharge-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.user .user-recharge-wrapper .user-recharge-box .recharge-info .info-title {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}
.user .user-recharge-wrapper .user-recharge-box .recharge-info .info-content {
  color: #999;
  font-size: 24rpx;
}
.user .user-recharge-wrapper .user-recharge-box .recharge-button {
  color: #333;
  padding: 10rpx 20rpx;
  font-size: 22rpx;
  border-radius: 50rpx;
  flex-shrink: 0;
  border: 1rpx solid #dadbde;
}
.user .user-recharge-wrapper .recharge-user-money {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #333;
}
.user .user-recharge-wrapper .recharge-user-money .recharge-money {
  font-weight: bold;
  font-size: 30rpx;
}
.user .user-recharge-wrapper .recharge-user-money .recharge-money::first-letter {
  font-size: 22rpx;
}
.user .user-activity-menu {
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 20rpx;
  background: #fff;
}
.user .user-activity-menu .menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 60rpx;
}
.user .user-activity-menu .menu-item .left {
  display: flex;
  align-items: center;
}
.user .user-activity-menu .menu-item .left .menu-icon {
  width: 40rpx;
  height: 40rpx;
}
.user .user-activity-menu .menu-item .left .menu-name {
  font-size: 28rpx;
  margin-left: 20rpx;
  color: #333;
}
.user .user-activity-menu .menu-item .menu-number {
  font-size: 30rpx;
  color: #666666;
  letter-spacing: 2rpx;
}
.user .user-activity-menu .menu-item:first-child {
  margin-top: 0;
}

